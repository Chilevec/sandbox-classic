@using System
@using Sandbox
@using Sandbox.UI
@using System.Linq
@attribute [StyleSheet]
@inherits PanelComponent

<root class="gamemainmenu">
    <NavigatorCanvas/>
</root>

@code
{
    protected override void OnStart()
    {
        BindClass("ingame", () => Game.ActiveScene.Title == "ingame" /* Game.InGame */ );
        BindClass("inlobby", () => Game.ActiveScene.Title == "lobby" /* Game.Menu?.Lobby != null */ );

        if ( Game.ActiveScene.Title == "lobby" ) SetClass( "open", true);
    }

    protected override void OnUpdate()
    {
        if (Input.EscapePressed)
        {
            if ( !Panel.Class.Contains( "open" ) )
            {
                SetClass("open", true);
            }
            else
            {
                if (Game.ActiveScene.Title == "ingame")
                {
                    SetClass("open", false);
                }
            }
        }
    }
}
