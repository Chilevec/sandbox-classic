@using System
@using Sandbox.UI
@attribute [StyleSheet]
@inherits PanelComponent

<root class="gamemainmenu">
    <MainMenu/>
</root>

@code
{
    public static MainMenuPanel Current { get; set; }

    protected override void OnStart()
    {
        BindClass( "ingame", () => Game.ActiveScene.Title == "ingame" );
        BindClass( "inlobby", () => Game.ActiveScene.Title == "lobby" );

        if ( Game.ActiveScene.Title == "lobby" ) SetClass( "open", true );
    }

    protected override void OnUpdate()
    {
        Current = this;

        if ( Input.EscapePressed )
        {
            if ( !Panel.Class.Contains( "open" ) )
            {
                SetClass( "open", true );
            }
            else if ( Game.ActiveScene.Title == "ingame" )
            {
                SetClass( "open", false );
            }
        }
    }
}
