@using System
@using Sandbox.UI
@attribute [StyleSheet]
@inherits PanelComponent

<root class="gamemainmenu @(isOpen ? "open" : "")">
    <MainMenu/>
</root>

@code
{
    public static MainMenuPanel Current { get; set; }

    protected override void OnStart()
    {
        BindClass( "ingame", () => Game.ActiveScene.Name != "ingame" );
        BindClass( "inlobby", () => Game.ActiveScene.Name != "lobby" );

        if ( Game.ActiveScene.Title == "lobby" ) SetClass( "open", true );
    }

    private bool isOpen = false;

    protected override void OnUpdate()
    {
        Current = this;

        if ( Input.EscapePressed )
        {
            Input.EscapePressed = false;

            isOpen = !isOpen;
            StateHasChanged();
        }
    }
}
