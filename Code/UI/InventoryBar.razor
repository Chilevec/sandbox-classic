@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@namespace Sandbox

<root>
    @for (int i = 0; i < 9; i++)
    {
        <InventoryIcon Index="@i" PlayerInventory="@playerInventory" />
    }
</root>

@code
{
    PlayerInventory _playerInventory;

    public PlayerInventory playerInventory
    {
        get
        {
            if (!_playerInventory.IsValid())
            {
                _playerInventory = Player.FindLocalPlayer().Components.Get<PlayerInventory>();
            }

            return _playerInventory;
        }
    }
}
